/*票务弹窗  */
.dialogGetticket{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
   background: rgba(0, 0, 0, .6);  
  z-index: 2;
}
.dialogGetticket .ticketBox{
  position: relative; 
  height: 90%;
  width: 585rpx;
  /* box-shadow: 0 6rpx 16rpx 8rpx #ccc; */
}
.ewm{
  position: absolute;
  width: 366rpx;
  height: 366rpx;
  bottom: 77rpx;
  left: 50%;
  transform: translate(-50%);
}
.closeBtn>image{
  width: 76rpx;
